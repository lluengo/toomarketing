@model BE.Servicio

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var etiquetas = (Dictionary<object, object>)Session["EtiquetasIDIOMA"];
}

<h2>@etiquetas["Detalle"].ToString()</h2>

<div>
    <h4>@etiquetas["Condiciones"].ToString()</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @etiquetas["Nombre"].ToString()
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @etiquetas["Descripcion"].ToString()
        </dt>
        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            @etiquetas["Categoria"].ToString()
        </dt>
        <dd>
            @Html.DisplayFor(model => model.categoria)
        </dd>

        <dt>
            @etiquetas["Precio"].ToString()
        </dt>
        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(etiquetas["Editar"].ToString(), "Edit", new { id = Model.id }) |
    @Html.ActionLink(etiquetas["Volver"].ToString(), "Index")
</p>
