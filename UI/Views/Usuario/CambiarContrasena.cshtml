@model BE.Usuario
@{
    ViewBag.Title = "CambiarContrasena";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BE.Usuario usuario = Session["usuario"] as BE.Usuario;
}

<h2>Cambiar Contraseña</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@usuario.usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => usuario.ID)


        <div class="form-group">
            <label class="control-label col-md-2">Ingrese nuevo password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => usuario.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", Type = "password" } })
                @Html.ValidationMessageFor(model => usuario.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=Guardar class="btn btn-default" />
            </div>
        </div>
    </div>
}
